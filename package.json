{
  "name": "rest-api",
  "version": "1.0.0",
  "description": "Demo project for a simple prod ready node REST API",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "start-server": "node ./dist/server.js",
    "start-server-dev": "tsc-watch --onSuccess \"node dist/server.js 9001\"",
    "dev": "npm-run-all clean build start-server-dev",
    "test": "npm-run-all clean build start-server"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.0"
  }
}